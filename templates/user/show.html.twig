{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="container">
        <p class="text-center mt-5 mb-5 pt-5 "><img class="w-25 rounded-pill" src="/img/{{user.photo}}"/></p>

        <h2 class="text-center mb-5 text-body pb-3">{{ user.nickname }}</h2>


        <section class="border text-center pb-5 pt-5 rounded-pill bg-dark text-white mb-5 border border-success">
            <h3 class="pb-4">Mes Trophées</h3>
                <article class="d-flex justify-content-around pb-2  ">
                        
                        <div class="flex-column">
                            <img class="pb-5 w-50" src="/img/bronze.png" alt="bronze">
                            <h4>Bronze</h4>                       
                        </div>
                            
                        
                        <div class="flex-column">
                            <img class="pb-5 w-50" src="/img/argent.png" alt="argent">
