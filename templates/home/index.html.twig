                <div class="card-body card-body-medium">
                 <titre-card class="card-text">Some quick example text.</titre-card>
                </div>
              </div>

              <div class="card card-medium" id="card-scroll">
                <img class="card-img-top card-img-top-medium" src="/images/card-information-du-jour-03.jpg" alt="Card image cap">
                <div class="card-body card-body-medium">
                 <titre-card class="card-text">Some quick example text.</titre-card>
                </div>
              </div>
              <div class="card card-medium" id="card-scroll">
                <img class="card-img-top card-img-top-medium" src="/images/card-information-du-jour-04.png" alt="Card image cap">
                <div class="card-body card-body-medium">
                 <titre-card class="card-text">Some quick example text.</titre-card>
                </div>
              </div>

              <div class="card card-medium" id="card-scroll">
                <img class="card-img-top card-img-top-medium" src="/images/card-information-du-jour-05.png" alt="Card image cap">
                <div class="card-body card-body-medium">
                 <titre-card class="card-text">Some quick example text.</titre-card>
                </div>
              </div>

              <div class="card card-medium" id="card-scroll">
                <img class="card-img-top card-img-top-medium" src="/images/card-information-du-jour-06.jpg" alt="Card image cap">
                <div class="card-body card-body-medium">
                 <titre-card class="card-text">Some quick example text.</titre-card>
                </div>
              </div>
              
          </div>
          
        </div>
      </section>
      <!-- Fin Section -->

    </main>
    <!-- Fin du Main-->
